<h1>Categories</h1>

<form action="/api/categories" method="POST">
  <label for="nom">Name:</label>
  <input type="text" nom="nom" id="nom">
  <br>
  <input type="submit" value="Add">
</form>
<ul>
  <% categories.forEach(category => { %>
    <li><a href="/categories/<%= category.id %>"><%= category.nom %></a></li>
  <% }); %>
</ul>

<a href="/categories/add">Add Category</a>